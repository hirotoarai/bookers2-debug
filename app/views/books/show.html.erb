<div class="container">
 <footer>
  <div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<% if flash[:notice] %>
          <p class="notice"><%= notice %></p>
        <% end %>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size:'50x50') %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>
					
					<% if @book.user_id == current_user.id %>
					 <td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success" %></td>
					 <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
                    <% end %>
                    
				<td><% if @book.favorited_by?(current_user) %>
					 <%= link_to book_favorites_path(@book), method: :delete do %>
                      <i class="glyphicon glyphicon-heart"></i>
                      <%= @book.favorites.count %>
                      <td>コメント数:<%= @book.book_comments.count %></td>
                     <% end %></td>
                     <% else %>
                       <td><%= link_to book_favorites_path(@book), method: :post do %>
                       <i class="glyphicon glyphicon-heart"></i>
                       <td>コメント数:<%= @book.book_comments.count %></td>
                       <% end %></td>
				    <% end %>
				</tr>
		</table>
                 
                  <% @book.book_comments.each do |book_comment| %>
                  <tr>
                      <td><%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size:'50x50') %>
                      <%= @book.user.name %></td>
                      <td><%= book_comment.comment %></td>
                      <% if book_comment.user_id == current_user.id %>
                       <div>
                        <td><%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete, class: "btn btn-danger pull-right" %></td>
                       </div>
                      <% end %>
                  </tr>
                  <% end %>

		        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
                 <div class="row">
                  <div class="col-sm-12">
                   <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                  </div>
                 </div>
                <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
                <% end %>
    </div>
  </div>
 </footer>
</div>